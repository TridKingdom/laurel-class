<section data-transition="convex-in convex-out" class="js-question-set">
  <section data-transition="slide-in slide-out">
    <h3 class="fragment grow" data-fragment-index="1">{{no}}. {{question}}</h3>
    <article class="fragment tk-answers-container clearfix" data-fragment-index="1">
      <h3 class="tk-answer js-choose-answer" data-option="1" data-answer="{{answer}}"><strong>1</strong>{{option1}}</h3>
      <h3 class="tk-answer js-choose-answer" data-option="2" data-answer="{{answer}}"><strong>2</strong>{{option2}}</h3>
      <h3 class="tk-answer js-choose-answer" data-option="3" data-answer="{{answer}}"><strong>3</strong>{{option3}}</h3>
      <h3 class="tk-answer js-choose-answer" data-option="4" data-answer="{{answer}}"><strong>4</strong>{{option4}}</h3>
    </article>
  </section>
  <section data-transition="slide-in slide-out">
    <h2 class="tk-title">
      <strong>
        {{#ifCond answer '===' '1' }} {{answer}} {{option1}} {{/ifCond}}
        {{#ifCond answer '===' '2' }} {{answer}} {{option2}} {{/ifCond}}
        {{#ifCond answer '===' '3' }} {{answer}} {{option3}} {{/ifCond}}
        {{#ifCond answer '===' '4' }} {{answer}} {{option4}} {{/ifCond}}
      </strong>
    </h2>
    {{#if answer_source}}<img class="tk-answer-img" data-src="{{answer_source}}" alt="{{answer_source}}" />{{/if}}
    {{#if answer_info}}<p class="tk-answer-info">{{answer_info}}</p>{{/if}}
  </section>
</section>