<section data-transition="convex-in convex-out" class="js-question-set">
  <section data-transition="slide-in slide-out">
    <h3 class="fragment grow" data-fragment-index="1">{{no}}. {{question}}</h3>
    <article class="fragment tk-answers-container clearfix" data-fragment-index="1">
      <h3 class="tk-answer">
        <strong>1</strong>
        <img class="tk-answer-img" data-src="{{option1}}" alt="{{option1}}" />
      </h3>
      <h3 class="tk-answer">
        <strong>2</strong>
        <img class="tk-answer-img" data-src="{{option2}}" alt="{{option2}}" />
      </h3>
      <h3 class="tk-answer">
        <strong>3</strong>
        <img class="tk-answer-img" data-src="{{option3}}" alt="{{option3}}" />
      </h3>
      <h3 class="tk-answer">
        <strong>4</strong>
        <img class="tk-answer-img" data-src="{{option4}}" alt="{{option4}}" />
      </h3>
    </article>
  </section>
  <section data-transition="slide-in slide-out">
    <h2 class="tk-title">
      <strong>{{answer}}</strong>
    </h2>
    {{#if answer_source}}<img class="tk-answer-img" data-src="{{answer_source}}" alt="{{answer_source}}" />{{/if}}
    {{#if answer_info}}<p class="tk-answer-info">{{answer_info}}</p>{{/if}}
  </section>
</section>